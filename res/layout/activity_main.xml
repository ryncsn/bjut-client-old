<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/myLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="myLoginAction"
        android:text="@string/myLoginButtonText" />

    <EditText
        android:id="@+id/myLoginPasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/myLoginButton"
        android:layout_alignLeft="@+id/myLoginName"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="@string/myLoginPasswdHint"
        android:inputType="textPassword" />

    <EditText
        android:id="@id/myLoginName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/myLoginPasswd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="@string/myLoginNameHint" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="jwLoginAction"
        android:layout_below="@+id/myLoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Button" />

</RelativeLayout>
